  <title>Mykola Gogol | Personal Portfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- [HEADER] BEGIN -->
<div class="wrapper">
  <div class="container header__container">
    <div class="row">
      <div class="twelve columns header__navigation">
        <nav>
          <%= link_to 'Mykola Gogol', root_path, class: 'logo__link' %>
          <a href="#">Home</a>
          <a href="#">About</a>
          <a href="#">Portfolio</a>
          <a href="#">Contact Me</a>
        </nav>
      </div>
    </div>
  </div>
</div>
<hr>
<!-- [HEADER] END -->
<%= yield %>

</body>
</html>
